{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["src/@types", "./node_modules/@types"]
  },
  "include": [
    "./*.js",
    "src/**/*.ts",
    "test/**/*.ts",
    "src/@types/index.d.ts"
  ]
}
